<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="260dp"
    android:orientation="vertical"
    android:id="@+id/item_product_frm_home"
    android:layout_marginTop="15dp">
    <ImageView
        android:id="@+id/img_product_frm_home"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitCenter"
        android:src="@drawable/img_banner01"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">
        <TextView
            android:gravity="center"
            android:id="@+id/txt_name_product_frm_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:maxLines="2"
            android:paddingHorizontal="10dp"
            android:ellipsize="end"
            android:text="hahadsssfsfsdssdsddssdcsdsdfsdsdcsdcsah"/>
        <TextView
            android:gravity="center"
            android:id="@+id/txt_price_frm_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#DD8560"
            android:maxLines="1"
            android:textSize="16sp"
            android:ellipsize="end"
            android:text="1000"/>
    </LinearLayout>

</LinearLayout>